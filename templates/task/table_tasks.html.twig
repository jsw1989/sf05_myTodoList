<div class="table-container">
    <table class="table is-responsive  is-bordered  is-fullwidth is-hoverable ">
        <thead>
        <tr class=" is-centered ">
            <th>Title</th>
            <th style="width: 40%">Note</th>
            <th>Status</th>
            <th>Due to</th>
            <th>Completed At</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for task in task_table %}
            <tr>
                <td> {{ task.title }}</td>
                <td>{{ task.note }}</td>
                <td>{{ standardStatus[task.status] }} </td>
                <td>{{ task.dueTo|date('Y-m-d H:i:s') }}</td>
                <td>{{ (task.completedAt is not empty) ?task.completedAt|date('Y-m-d H:i:s'):"" }}</td>
                <td>
                    <a href="{{ path('edit_task', {id: task.id }) }}" title="Edit" style="margin-right: 10px;"><i class="fas fa-edit"></i><a/>
                    {% if task.status != 'done' %}
                        <a href="{{ path('done_task', {id: task.id }) }}" title="Mark as done" style="margin-right: 10px;">
                            <i class="far fa-check-square"></i><a/>
                    {% endif %}
                    <a onclick="return confirm('You want to delete this task ?')"
                           href="{{ path('delete_task', {id: task.id}) }}" title="Remove" style="margin-right: 10px;"> <i class="fas fa-trash-alt"></i></a>
                </td>

            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>

